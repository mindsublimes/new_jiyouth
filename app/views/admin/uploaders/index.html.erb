<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Dashboard</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Dashboard v1</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Main row -->
    
    <div class="row">
      <div class="col-md-12">
        <div class="card card-default">
          <div class="card-header">
            <h3 class="card-title">
              Upload Content File <small><em></em> </small>
            </h3>
          </div>
          <div class="card-body">
            <div id="actions" class="row">
              <div class="col-sm-12 d-flex justify-content-center align-items-center">
                <div class="text-center mt-5 mb-5 text-center">
                  <%= form_tag('/admin/uploaders', method: :post, multipart: true) do -%>
                   <%= file_field_tag :file , :class => "btn btn-success col fileinput-button dz-clickable" %>
                  <div><%= submit_tag 'Upload', :class => "btn btn-primary col mt-3" %></div>
                  <% end -%>
                </div>
              </div>
              
            </div>
            <div class="table table-striped files" id="previews"></div>
          </div>

          <div class="card-footer">
            <strong>Note:</strong>
            
            Your data will be upload through this file importer.
          </div>
        </div>
      </div>
    </div>
    <!-- /.row (main row) -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
