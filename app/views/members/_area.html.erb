<%= select_tag('local_govt_structure_id', options_for_select(areas.map{|p| [p.title, p.id]}), prompt: 'Select Area', class:"form-select my-select-tag form-select-lg select-area") %>

<script>
  $(".select-area").on('change',function(){
    $.ajax({
      type: 'GET',
      dataType: 'script',
      url: '/members/units',
      data: {id: $(this).val()},
    });
  });
	
</script>